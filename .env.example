# ContextSafe - Environment Configuration Example
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION
# ============================================
APP_ENV=development
LOG_LEVEL=info
DEBUG=false

# ============================================
# API SERVER
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite+aiosqlite:///data/contextsafe.db

# ============================================
# LLM (llama-cpp-python)
# ============================================
LLM_MODEL_PATH=models/mistral-7b-v0.3.Q4_K_M.gguf
LLM_N_GPU_LAYERS=0
LLM_N_CTX=4096
LLM_TEMPERATURE=0.7

# ============================================
# NLP / NER (spaCy)
# ============================================
SPACY_MODEL=es_core_news_lg
NER_CONFIDENCE_THRESHOLD=0.7

# ============================================
# OCR (Tesseract)
# ============================================
TESSERACT_LANG=spa
TESSERACT_PATH=/usr/bin/tesseract

# ============================================
# OLLAMA (Alternative LLM)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b

# ============================================
# AUTHENTICATION
# ============================================
# Google OAuth Client ID (for demo web mode)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# JWT signing key (generate with: openssl rand -hex 32)
# If not set, a random key is generated on each startup
JWT_SECRET_KEY=
# Comma-separated emails for unlimited demo usage
UNLIMITED_USERS=

# ============================================
# FRONTEND
# ============================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000

# ============================================
# OBSERVABILITY
# ============================================
METRICS_ENABLED=true
METRICS_PORT=9090
TRACES_ENABLED=false
